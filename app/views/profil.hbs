              <input class="inputSignin" name="username" type="text" placeholder="XxDarkSasukexX" required />
            </div>
            </div>

          <div class="form-group row">
            <label for="email" class="col-2 col-form-label">Adresse mail</label>
            <div class="col-10">
              <input class="inputSignin" type="email" name="email" placeholder="Example@djake.com" required />
            </div>
          </div>
          <div class="form-group row">
            <label for="pays" class="col-2 col-form-label">Nom</label>
            <div class="col-10">
              <input class="inputSignin" name = "lastname" placeholder="DUMOULIN" required />
            </div>
          </div>
          <div class="form-group row">
            <label for="pays" class="col-2 col-form-label">Prenom</label>
            <div class="col-10">
              <input class="inputSignin" name = "firstname" placeholder="KÃ©vin" required />
            </div>
          </div>
          <div class="form-group row">
            <label for="pays" class="col-2 col-form-label">Pays</label>
            <div class="col-10">
              <input class="inputSignin" name = "pays" placeholder="USA" required />
            </div>
          </div>
          <button class="btn btn-outline-success" type="submit">Enregistrer</button>
        </form>
        </div>

      </div>
    </div>
{{>player}}
